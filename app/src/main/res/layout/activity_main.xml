<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6414A80A"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="122dp"
        android:layout_height="132dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/circle" />
    <ImageView
        android:id="@+id/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-220dp"
        android:src="@drawable/circle" />


    <ImageView
        android:id="@+id/circle3"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-190dp"
        android:src="@drawable/circle" />
    <ImageView
        android:id="@+id/circle4"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="190dp"
        android:layout_marginBottom="-220dp"
        android:src="@drawable/circle" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:src="@drawable/aapbd" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ADVANCED APPS BANGLADESH"
        android:textColor="#070505"
        android:textSize="24sp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="25dp"



        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Abu Sayed Chowdhury"
            android:textColor="#070505"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Software Engineer"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal">
        </TextView>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Email : sayed@aapbd.com"
            android:textColor="#070505"
            android:textSize="14sp"
            android:textStyle="normal">
        </TextView>
        <TextView
            android:id="@+id/cellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Cell : 01708194191"
            android:textColor="#070505"
            android:textSize="14sp"
            android:textStyle="normal">
        </TextView>
        <TextView
            android:id="@+id/github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Github : github.com/AscEmon"
            android:textColor="#070505"
            android:textSize="14sp"
            android:textStyle="normal">
        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/borak" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/appbajar" />

    </LinearLayout>


</LinearLayout>